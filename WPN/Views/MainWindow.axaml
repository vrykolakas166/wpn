<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WPN.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="WPN.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="WPN - Notes"
        Width="900" Height="600"
        MinWidth="600" MinHeight="400"
        Topmost="{Binding IsAlwaysOnTop}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Command="{Binding NewNoteCommand}" 
                        Content="+ New Note"
                        Padding="12,6"
                        Background="#007ACC"
                        Foreground="White"
                        CornerRadius="4"/>
                <Button Command="{Binding DeleteNoteCommand}" 
                        Content="Delete"
                        Padding="12,6"
                        Background="#CC3333"
                        Foreground="White"
                        CornerRadius="4"
                        IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                <Separator Width="1" Background="#E0E0E0"/>
                <CheckBox IsChecked="{Binding IsAlwaysOnTop}" 
                          Content="Always on Top"
                          VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Notes List -->
            <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <ListBox ItemsSource="{Binding Notes}" 
                         SelectedItem="{Binding SelectedNote}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" 
                                    Margin="2"
                                    CornerRadius="4"
                                    Background="Transparent">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding ModifiedAt, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                               FontSize="11"
                                               Foreground="#666666"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="Transparent" ResizeDirection="Columns"/>
            
            <!-- Editor -->
            <Border Grid.Column="2" Background="White" Padding="20">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding NoteContent, Mode=TwoWay}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             Background="Transparent"
                             FontFamily="Consolas,Monaco,Courier New,monospace"
                             FontSize="14"
                             IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                             Watermark="Select a note or create a new one..."
                             MinHeight="400"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>

</Window>
